pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/anjalii13/MyProject.git'
            }
        }
        stage('Build') {
            steps {
                echo 'No build required for static website'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t yourusername/myproject:latest .'
                sh 'docker push yourusername/myproject:latest'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f deployment.yaml'
                sh 'kubectl apply -f service.yaml'
            }
        }
    }
}
